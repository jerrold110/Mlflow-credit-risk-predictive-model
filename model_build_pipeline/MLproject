entry_points:
  split_data:
    parameters:
      data_file: path
    command: "python split_data.py {data_file}"
  # Extract data from a certain location with a certain feature extractor logic
  extract_data:
    parameters:
      data_path: path
      extractor_file: path
    command: "python extract_data.py {data_path} {extractor_file}"

  train:
    parameters:
      data_path: path
      regularization: {type: string, default: 'l2'}
    command: "python train.py -r {data_path} {regularization_type}"
  # Default entry-point: mlflow run .
